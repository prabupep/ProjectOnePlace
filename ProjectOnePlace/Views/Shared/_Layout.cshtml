<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One Place Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/angular/JS")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @Scripts.Render("~/Sitebase/JS")
    <script type="text/javascript">
 
    </script>
</head>
<body ng-app="projectoneplace">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Project OnePlace</a>
            </div>
            <ul class="nav navbar-nav">
                <li ><a href="/">Home</a></li>
                <li class="dropdown active">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Release
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="active"><a href="/Release/NewRequest">New Release Request</a></li>
                        <li><a href="/Release/RequestList">Release List</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Master Setup
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Master">Site Info</a></li>
                        <li><a href="/Master">3rd Party Service Info</a></li>
                        <li><a href="/Master">Resources Info</a></li>
                    </ul>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ProjectOnePlace</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
