<div>
    <h1>Add New Project</h1>
    <form calss="form-inline">
        <div class="form-group row">
            <label class="col-sm-6" for="project-name">Project</label>
            <div class="col-sm-6">
                <input ng-model="project.Name" type="text" class="form-control" id="project-name" placeholder="Project Name">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="region-select">Region</label>
            <div class="col-sm-6">
                <select class="form-control" id="region-select">
                    <option>NA</option>
                    <option>EU</option>
                    <option>APAC</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="dpm-email">DPM email id</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="dpm-email" placeholder="DPM Email address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="stage-prev-url">Stage Preview URL</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="stage-prev-url" placeholder="DPM Email address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="stage-cd-url">Stage CD URL</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="stage-cd-url" placeholder="DPM Email address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="prod-prev-url">Production Preview URL</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="prod-prev-url" placeholder="DPM Email address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="prod-cd-url">Production CD URL</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="prod-cd-url" placeholder="DPM Email address">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-6" for="proj-comments">Comments</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="proj-comments" placeholder="DPM Email address">
            </div>
        </div>

        <button type="button" ng-click="addnewproject()" id="btn-add-project" class="btn btn-primary">Create Project</button>
    </form>
</div>